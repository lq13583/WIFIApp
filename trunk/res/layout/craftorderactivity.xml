<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
  			  android:layout_height="match_parent"
  			  android:orientation="vertical">
  	<LinearLayout android:id="@+id/top_control_bar"
  				  android:layout_width="match_parent"
  				  android:layout_height="wrap_content"
  				  android:orientation="horizontal">	  
  		<Spinner android:id="@+id/spinner"
  				 android:layout_width="wrap_content"
  				 android:layout_height="wrap_content"
  				 android:layout_gravity="center_vertical"
  				 android:prompt="@string/select_craft" />
  		<Spinner android:id="@+id/spinner_sort"
  				 android:layout_width="wrap_content"
  				 android:layout_height="wrap_content"
  				 android:layout_gravity="center_vertical"
  				 android:prompt="@string/select_order" />
	  	<Button android:id="@+id/btnOpen"
	  			android:text="Open"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/list_title"
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal"
	  			  android:layout_below="@id/top_control_bar">		  
		<TextView style="@style/ListTitle"
				  android:text="Wonum"
  				  android:gravity="left"
  				  android:layout_weight="11" />
		<TextView style="@style/ListTitle"
				  android:text="Reportdate/Labor"
  				  android:gravity="left"
  				  android:layout_weight="8" />
		<TextView style="@style/ListTitle"
				  android:text="Location"
  				  android:gravity="left"
  				  android:layout_weight="9" />
		<TextView style="@style/ListTitle"
				  android:text="Status"
  				  android:gravity="left"
  				  android:layout_weight="11" />
	</LinearLayout>
	<LinearLayout android:id="@+id/list"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:layout_weight="1">
		<ListView android:id="@+id/android:list"
  			  android:layout_width="fill_parent"
  			  android:layout_height="fill_parent"
  			  android:choiceMode="singleChoice"
  			  android:focusable="true"
  			  android:focusableInTouchMode="true"
  			  android:listSelector="@android:color/transparent"
  			  android:layout_below="@id/list_title" />
  	<TextView android:id="@+id/android:empty"
  			  android:layout_width="fill_parent"
  			  android:layout_height="fill_parent"
  			  android:text="No Craft Order Info"
  			  android:layout_below="@id/list_title" />
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="2">
		<TextView android:id="@+id/txtDescription"
	  	  	  	android:layout_width="fill_parent"
	  	  	  	android:layout_height="wrap_content"
	  	  	  	android:text="Descriptions here"
		      	android:background="#404040" />
	</ScrollView>  			  
</LinearLayout>